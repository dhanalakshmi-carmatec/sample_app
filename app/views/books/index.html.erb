<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><% book.name %></td>
        <td><%= book.description %></td>
        <td><%= link_to 'Add', new_category_book_path(@category, book) %></td>
        <td><%= link_to 'Edit', edit_category_book_path(@category, book) %></td>
        <td><%= link_to 'Destroy', category_book_path(@category, book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

