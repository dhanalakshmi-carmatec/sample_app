<p id="notice"><%= notice %></p>

<div class="container">
<h1>Users</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Email</th>
      <!-- <th>Password</th> -->
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
       <!--  <td><%  user.password %></td> -->
        <td><%= user.active %></td>
        <td><%= link_to 'New', new_admin_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Destroy', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>